<%= provide(:title, "All Contacts")%>
<%= render "layouts/flash" %>
<div class="row">
	<div class="col-xs-12">
		<h2>All Contacts <div id="home-image"><%=image_tag("PalmettoLogo.png", alt:"Palmetto Studios", class:"brand-image pull-right") %></span></h2>
	</div>
	
	<div class="col-xs-12 table-responsive">
		<br/>
		<table class="table table-striped table-bordered text-center">
			<tr>
				<th class="text-center">Name</th>
				<th class="text-center">Email</th>
				<th class="text-center">Phone</th>
				<th class="text-center">Body</th>
				<th class="text-center" colspan="3">Actions</th>
			</tr>
            <% @contacts.each do |contact| %>	
			<tr>
				<td><%= link_to contact.name, contact_path(contact) %></td>
				<td><%= contact.email %></td>
				<td><%= contact.phone %></td>
				<td><%= contact.body %></td>
				<td><%= link_to "Show", contact_path(contact) %></td>
				<td><%= link_to "Edit", edit_contact_path(contact) %></td>
				<td><%= link_to "Delete", contact_path(contact), method: :delete,
										  data: { confirm:"Are you sure?" } %></td>
			</tr>
			<% end %>
		</table>		      
	</div>
</div>

